                  </div>
                  <%end%>
                  <%= render @job_offer %>
                  <%= form_with(model: @job_application, url: job_offer_job_applications_path(@job_offer), local: true) do |form| %>
                    <!-- Form fields for cover letter and resume -->
                    <div class="mb-3">
                    <%= form.text_area :cover_letter  , class:'form-control', placeholder: 'Enter your cover letter' %>
                    </div>
                    <%= form.submit 'Submit Application', class: 'mt-4 btn btn-primary w-md waves-effect waves-light' %>
                  <% end %>
                </div>
                </div>
            </div>
