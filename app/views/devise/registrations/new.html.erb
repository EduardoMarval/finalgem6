<div class="account-pages my-5 mt-6 pt-sm-5">
<div class="container mt-5">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card overflow-hidden">
                <div class="card-body pt-0">
                <%= link_to "Back", '/',class: 'btn btn-outline-dark waves-effect waves-light mt-4' %> 
                    <h3 class="text-center mb-4">
                    <!-- logo -->
                    </h3>
                    <div class="p-3">
                        <p class="text-muted text-center"> New user account.</p>
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal mt-4' }) do |f| %>
                          <%= render "devise/shared/error_messages", resource: resource %>

                          <div class="mb-3">
                          <%= f.text_field :full_name , class:'form-control' %>
                          </div>

                            <div class="mb-3">
                                <label for="useremail">Email</label>
                                <%= f.email_field :email, class:'form-control', id:'useremail', autofocus: true%>
                            </div>

                            <div class="mb-3">
                            <label>Image</label>
                            <%= f.file_field :image, class:'form-control', autofocus: true %>
                            </div>

                            <div class="mb-3">
                            <label>About</label>
                            <%= f.text_field :about, autocomplete: "about",autofocus: true, class:'form-control' %>
                            </div>

                            <div class="mb-3">
                            <label>Password</label>
                            <%= f.password_field :password, autocomplete: "new-password",class:'form-control' %>
                            <% if @minimum_password_length %>
                              <br />
                              <em><%= @minimum_password_length %> characters minimum</em>
                            <% end %>
                           </div>

                           <div class="mb-3"> 
                           <label>Confirmation New Password</label>
                           <%= f.password_field  :password_confirmation,  autocomplete: "new-password", class:'form-control',id:'userpassword', class:'form-control' %>
                           </div>

                            <div class="mb-3 row mt-4">
                            <div class="col-6">
                            <div class="form-check">
                              </div>
                              </div>
                                <div class="col-6 text-end">
                                <%= f.submit "Sign up", class:'btn btn-primary w-md waves-effect waves-light',data:{turbo:false} %>
                                </div>
                            </div>
                            <div class="form-group mb-0 row">
                            </div>
                        <%end%>
                    </div>
                </div>
            </div>
            <div class="mt-5 text-center">
                Â© 2023 New Job Offers <span
                    class="d-none d-sm-inline-block"> - Powered by Marval</span>
            </div>
        </div>
    </div>
</div>
</div>